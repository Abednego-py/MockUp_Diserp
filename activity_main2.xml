<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="4dp"
        android:padding="10dp"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome Abednego,"
            android:textColor="#000"
            android:textSize="24sp"
            android:paddingLeft="12dp"
            android:layout_marginBottom="10dp"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src = "@drawable/bell_2"
                android:layout_marginLeft="80dp"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Login: 01/12/2021"
            android:paddingLeft="20dp"
            android:textSize="15sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="15dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card1"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="#8332a8"
                app:cardElevation="15dp"
                android:layout_width="170dp"
                android:layout_height="100dp"
                android:layout_margin="7dp"
                app:cardCornerRadius="4dp"

                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="2dp"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Exeat Request"
                        android:layout_marginBottom="15dp"
                        android:textColor="#fff"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="1dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:textSize="20sp"
                            android:textColor="#fff"/>

                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card2"
                android:layout_width="170dp"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                app:cardBackgroundColor="#32a853"
                app:cardCornerRadius="4dp"
                app:cardElevation="15dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_margin="4dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Approved Request"
                        android:textColor="#fff"
                        android:layout_marginBottom="15dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="1dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6"
                            android:textSize="20sp"
                            android:textColor="#fff"/>

                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card3"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="#d63e3e"
                app:cardElevation="15dp"
                app:cardCornerRadius="4dp"
                android:layout_width="170dp"
                android:layout_height="100dp"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_margin="4dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rejected Requests"
                        android:textColor="#fff"
                        android:layout_marginBottom="15dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="1dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textSize="20sp"
                            android:textColor="#fff"/>

                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card4"
                android:layout_width="170dp"
                android:layout_height="100dp"
                app:cardElevation="15dp"
                app:cardBackgroundColor="#d6bd3e"
                app:cardCornerRadius="4dp"
                android:layout_margin="10dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_margin="4dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rejected Requests"
                        android:textColor="#fff"
                        android:layout_marginBottom="10dp"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="1dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:textSize="20sp"
                            android:textColor="#fff"/>

                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/SearchField"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:hint="Recent Request"
            app:boxCornerRadiusTopStart="5dp"
            app:boxCornerRadiusBottomEnd="5dp"
            app:boxCornerRadiusBottomStart="5dp"
            app:boxCornerRadiusTopEnd="5dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            app:boxStrokeColor="@color/black"
            app:boxBackgroundColor="#e6e6e6"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card5"
            android:layout_width="350dp"
            android:layout_gravity="center"
            android:layout_height="80dp"
            app:cardElevation="15dp"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="4dp"
            app:strokeColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_margin="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="4dp"
                >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_margin="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="13/07/2019 16:37:53"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="100dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Approved"
                    android:textSize="15sp"
                    android:textColor="#90ee90"
                    />

            </LinearLayout>
            <View
                android:layout_width="300dp"
                android:layout_height="0.8dp"
                android:layout_gravity="center"
                android:background="#808080"
                android:layout_marginBottom="5dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_margin="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="I want to  go and activate \n my ATM card at the bank"
                android:textColor="#808080"
                android:textSize="11sp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="80dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Dep Time: 10:30am\n Arrival Time: 1:30pm"
                android:textSize="11sp"
                android:textColor="#000"
                />
            </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card6"
            android:layout_width="350dp"
            android:layout_gravity="center"
            android:layout_height="80dp"
            app:cardElevation="15dp"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="4dp"
            app:strokeColor="@color/black"
            android:layout_margin="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="2dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:layout_margin="1dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="13/07/2019 16:37:53"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="100dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Rejected"
                        android:textSize="15sp"
                        android:textColor=" #FF7F7F"
                        />

                </LinearLayout>
                <View
                    android:layout_width="300dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="#808080"
                    android:layout_marginBottom="5dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:layout_margin="1dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="I want to go collect some \n from a friend"
                        android:textColor="#808080"
                        android:textSize="11sp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="80dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Dep Time: 10:30am\n Arrival Time: 1:30pm"
                        android:textSize="11sp"
                        android:textColor="#000"
                        />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src = "@drawable/nav_drawer"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>